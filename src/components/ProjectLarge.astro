---
export interface Props {
  title: string;
  subtitle?: string;
	image?: string;
  link?: string;
  classes?: string;
}

const { title, subtitle, image, link, classes } = Astro.props;
---

<div class={classes}>
  <div class={`border border-grey-300 rounded-2xl p-7`}>

    {link && image ? (
      <a href={link}>
        {image && (
          <img class="rounded-xl" src={image} alt={title}>
        )}
      </a>
    ) : ''}

    {!link && image ? (
      <img class="rounded-xl" src={image} alt={title}>
    ) : ''}

    <h2 class="text-2xl xl:text-4xl tracking-[-1px]">{title}</h2>

    <slot />
  </div>
</div>